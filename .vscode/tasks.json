{
    "version": "0.1.0",
    "command": "cmd",
    "isShellCommand": true,
    "args": ["/c"],
    "showOutput": "always",
    "tasks": [
        {
            "taskName": "ComplieRun",
            "suppressTaskName": true,
            "args": ["g++", "-g", "${fileBasename}", "-o", "F:\\SublimeOutput\\${fileBasenameNoExtension}.exe", "&&" ,"F:\\SublimeOutput\\${fileBasenameNoExtension}.exe"],//, "<input.txt"],
            "isBuildCommand": true,
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceRoot}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ]
}